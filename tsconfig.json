{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "strict": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "@/assets/*": ["assets/*"],
      "@/uikit/*": ["uikit/*"],
      "@/screens/*": ["screens/*"],
      "@/screens": ["screens/index"],
      "@/i18n/*": ["common/i18n/*"],
      "@/i18n": ["common/i18n/index"],
      "@/models/*": ["common/models/*"],
      "@/api/*": ["common/api/*"],
      "@/tools/*": ["common/tools/*"],
      "@/utils/*": ["common/utils/*"],
      "@/hooks": ["common/hooks/index"],
      "@/hooks/*": ["common/hooks/*"],
      "@/constants/*": ["common/constants/*"],
      "@/validations/*": ["common/validations/*"],
      "@/store/*": ["common/store/*"],
      "@/store": ["common/store/index"]
    }
  }
}
